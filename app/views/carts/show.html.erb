<div class="container py-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card border-0 shadow-lg rounded-3xl">
        <h2 class="card-title text-center my-4 text-primary">Your Cart</h2>
        <div class="card-body">
          <% total_price = 0 %>
          <% @order_lists.each do |order_list| %>
            <div class="card mb-3 border-0 bg-light rounded-3xl">
              <div class="card-body d-flex align-items-center p-3">
                <div class="card-image mr-3" style="background-image: url(<%= cl_image_path(order_list.meal.photo.key) %>); height: 100px; width: 100px; background-size: cover; background-position: center;"></div>
                <div class="ms-3">
                  <h5 class="card-title mb-2 mt-0"><strong><%= order_list.meal.name %></strong></h5>
                  <p class="card-text text-muted mb-0">Rs <%= order_list.meal.price %></p>
                </div>
                <% total_price += order_list.meal.price %>
              </div>
            </div>
          <% end %>
          <div class="text-center">
            <p>Total: RS <%= @cart.total_price %></p>
            <%= link_to 'Checkout!', cart_path(@cart), data: { turbo_method: :patch }, class: 'btn btn-primary btn-lg' %>
          </div>
          <hr class="my-4">
          <p class="text-center mt-3 mb-0"><small><a href="#" class="text-muted">Continue Shopping</a></small></p>
        </div>
      </div>
    </div>
  </div>
</div>
