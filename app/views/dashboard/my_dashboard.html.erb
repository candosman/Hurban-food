<%= render 'layouts/top_dashboard' %>
<div class="flex justify-center items-center h-screen">
  <div class="welcome-container text-center">
    <h2>Welcome back <%= current_user.name.capitalize %></h2>
  </div>
</div>


<div class="stats-container mt-4 d-grid grid-2 gap-2 mb-4">
  <div class="box-container flex-column bg-gray-200 p-4 rounded-lg">
    <h4 class="text-lg font-semibold"><strong>Number of Meals Sold</strong></h4>
    <h2 class="text-3xl font-bold"><%= @meals_sold %></h2>
  </div>
  <div class="box-dashboard-container flex-column bg-gray-200 p-4 rounded-lg">
    <h4 class="text-xl font-semibold">Number of Customers</h4>
    <h2 class="text-4xl font-bold"><%= @number_of_customers %></h2>
  </div>
</div>

<div class="chart-container mt-6 bg-white p-6 rounded-lg shadow-md">
  <div class="orderstime-container text-center">
    <h3 class="text-2xl font-semibold mb-4">Orders Over Time</h3>
  </div>
  <%= line_chart OrderList.group_by_day(:created_at).count, class: "chart" %>
</div>

<div class="revenue-container mt-6 bg-gray-200 p-4 rounded-lg">
  <div class="revenue-container text-center">
    <h3 class="text-xl font-semibold">Total Revenue</h3>
  </div>
  <div class="revenue-container text-center">
  <p class="text-3xl font-bold"><%= @revenue %></p>
</div>

<%= render 'layouts/btm_dashboard' %>
