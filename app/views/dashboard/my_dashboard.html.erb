<div class="flex justify-center items-center h-screen">
  <div class="welcome-container text-center">
    <h2>Welcome back <%= current_user.name.capitalize %></h2>
  </div>
</div>


 <div class="stats-container ">
  <div class="stats-card flex-column bg-gray-200 p-4 rounded-lg">
    <h4 class="text-lg font-semibold"><strong>Number of Meals Sold</strong></h4>
    <h2 class="text-3xl font-bold"><%= @meals_sold %></h2>
  </div>
  <div class="stats-card flex-column bg-gray-200 p-4 rounded-lg">
    <h4 class="text-lg font-semibold">Number of Customers</h4>
    <h2 class="text-3xl font-bold"><%= @number_of_customers %></h2>
  </div>
  <div class="stats-card revenue-card flex-column bg-gray-200 p-4 rounded-lg">
      <h3 class="revenue-title">Total Revenue</h3>
      <div class="revenue-amount">
        <p class="revenue-value"><%= @revenue %></p>
      </div>
  </div>
</div>








<div class="chart-container mt-6  bg-white p-6 rounded-lg shadow-md"style="margin-bottom: 30px;">
  <div class="orderstime-container text-center">
    <h3 class="text-2xl font-semibold mb-4">Orders Over Time</h3>
  </div>
  <%= line_chart OrderList.group_by_day(:created_at).count, class: "chart" %>
</div>
