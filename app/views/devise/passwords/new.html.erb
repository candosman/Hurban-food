<div class="container d-flex big-container">
    <div class="d-flex login-form-container gap-3">
      <div class="form-details">
        <h2 class='text-center'>Forgot your password?</h2>
          <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" },
                placeholder: "Enter email" %>
  </div>

  <div class="form-actions d-flex justify-content-center gap-3">
            <%= f.button :submit, "Send me reset password instructions", class:"btn btn-info" %>
        <%= render "devise/shared/links" %>
          </div>
        <% end %>
      </div>
      <div class="imageclass">
        <img src="https://plus.unsplash.com/premium_photo-1673439305009-821f62df6d31?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
      </div>
      </div>
</div>

<style>
  body {
    background-image: url('https://images.unsplash.com/photo-1558818498-28c1e002b655?q=80&w=3264&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
  }
</style>
