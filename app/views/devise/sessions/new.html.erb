<div class="container d-flex big-container">
    <div class="d-flex login-form-container gap-3">
      <div class="form-details">
        <h2 class="text-center">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" },
                      placeholder:"Enter email" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" },
                      placeholder: "Enter password" %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions d-flex justify-content-center gap-3">
          <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
          <%= render "devise/shared/links" %>
        </div>
    <% end %>
      </div>
      <div class="imageclass">
        <img src="https://plus.unsplash.com/premium_photo-1673439305009-821f62df6d31?q=80&w=1374&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">
      </div>
      </div>
</div>

