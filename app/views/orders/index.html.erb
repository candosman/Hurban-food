<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0),rgba(0,0,0,0)), url(<%= image_path('https://plus.unsplash.com/premium_photo-1673108852141-e8c3c22a4a22?q=80&w=1470&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D') %>);">
</div>
<div class="container container-orders my-5">
  <h1 class="order-header mt-3 text-center">My Orders</h1>
  <table class="table table-hover table-striped">
    <thead class="table-dark">
      <tr>
        <th scope="col">Order Number</th>
        <th scope="col">Date</th>
        <th scope="col">Total</th>
        <th scope="col">Status</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>#<%= order.order_number %></td>
          <td><%= order.created_at.strftime("%d %B, %Y") %></td>
          <td>Rs <%= number_with_delimiter(order.amount, delimiter: ',') %></td>
          <td>
            <% if order.delivered_status %>
              <span class="badge bg-success">Delivered</span>
            <% else %>
              <span class="badge bg-warning text-white">On the Way</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<style>
  .container-orders {
    background-color: #f8f9fa;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .order-header {
    font-family: 'Roboto', sans-serif;
    font-weight: 700;
    color: #343a40;
  }

  .table thead {
    background-color: #343a40;
    color: white;
  }

  .table tbody tr {
    transition: background-color 0.2s ease;
  }

  .table tbody tr:hover {
    background-color: #f1f1f1;
  }
</style>
