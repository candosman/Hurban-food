<!-- Site footer -->
<footer class="site-footer bg-dark text-white py-4">
  <div class="container">
    <div class="row align-items-center">
      <!-- Logo Section -->
      <div class="col-md-4 mb-3 d-flex justify-content-center justify-content-md-start">
        <%= image_tag "logo.png", alt: "Hurban Food", width: 150, class: "img-fluid" %>
      </div>
      <!-- About Section -->
      <div class="col-md-4 mb-3 text-center">
        <h6>About</h6>
        <p class="text-justify mx-auto" style="max-width: 400px;">
          "Hurban Food" is your go-to food app for urban cravings. Discover a diverse range of culinary delights from local eateries, trendy cafes, and hidden gems within your vicinity. Whether you're in the mood for a quick bite or a gourmet meal, Hurban Food makes ordering easy with seamless delivery or pickup options.
        </p>
      </div>
      <!-- Links Section -->
      <div class="col-md-4 mb-3 text-center text-md-right social-icons-container">
        <ul class="list-unstyled">
          <li><a class="facebook"><i class="fa-brands fa-square-facebook"></i></a></li>
          <li><a class="twitter"><i class="fa-brands fa-square-twitter"></i></a></li>
          <li><a class="instagram"><i class="fa-brands fa-square-instagram"></i></a></li>
          <li><a class="github"><i class="fa-brands fa-square-github"></i></a></li>
        </ul>
      </div>
    </div>
    <div class="row">
      <!-- Back to Top -->
      <div class="col-12 text-center mt-3">
        <a href="#" class="text-light">Back to Top <i class="fa fa-angle-up"></i></a>
      </div>
    </div>
  </div>
</footer>


